generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Game {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  name      String
  players   Player[] @relation(name: "PlayersInGame")
  shareId   String
  creatorId String   @db.ObjectId
  creator   User     @relation(fields: [creatorId], references: [id])
}

model Player {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  gameId String  @db.ObjectId
  game   Game    @relation(name: "PlayersInGame", fields: [gameId], references: [id])
  name   String
  score  Int     @default(0)
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  anonymous Boolean @default(true)
  sessionId String
  games     Game[]
}
