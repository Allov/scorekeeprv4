generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Game {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  name      String
  playerIds String[] @db.ObjectId
  players   Player[] @relation(name: "PlayersInGame", fields: [playerIds], references: [id])
  scores    Score[]
  shareId   String
  creatorId String   @db.ObjectId
  Player    Player?  @relation(fields: [playerId], references: [id])
  playerId  String?  @db.ObjectId
}

model Player {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  gameIds        String[] @db.ObjectId
  games          Game[]   @relation(name: "PlayersInGame", fields: [gameIds], references: [id])
  name           String
  score          Score[]
  createdGameIds String[] @db.ObjectId
  createdGames   Game[]
}

model Score {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  playerId String @db.ObjectId
  player   Player @relation(fields: [playerId], references: [id])
  gameId   String @db.ObjectId
  game     Game   @relation(fields: [gameId], references: [id])
  score    Int
}
