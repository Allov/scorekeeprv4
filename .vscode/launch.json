{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "API Explorer",
      "url": "http://localhost:4000/graphql",
      "cwd": "${workspaceFolder}/api",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "start"
      ]
    },
    {
      "type": "node",
      "name": "API Debug",
      "request": "attach",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector",
      "trace": true,
      "cwd": "${workspaceFolder}/api",
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "/graphql",
      "sourceMaps": true
    }
  ]
}
